<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://${db.slave.ip}:${db.slave.port}/${db.slave.dbname}?useUnicode=true&amp;characterEncoding=utf8" />
				<property name="username" value="${db.slave.username}" />
				<property name="password" value="${db.slave.password}" />
				<!-- 连接池最大使用连接数量 -->
				<property name="poolMaximumActiveConnections" value="${db.slave.maxconn}" />
				<!-- 在任意时间存在的空闲连接数 -->
				<property name="poolMaximumIdleConnections" value="${db.slave.minconn}" />
				<property name="poolPingEnabled" value="true" />
				<property name="poolPingQuery" value="select 1 " />
				<property name="poolPingConnectionsNotUsedFor" value="3600000" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
	${db.slave.mappers}
	</mappers>
</configuration> 